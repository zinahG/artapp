<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (artworks.length > 0) { %>
    <div class="grid">
      <% for (let artwork of artworks) { %>
      <article class="card artwork-item">
        <header class="card__header">
          <h1 class="artwork__title">
            <%= artwork.title %>
          </h1>
        </header>
        <div class="card__image">
          <img src="/<%= artwork.imageUrl %>" alt="<%= artwork.title %>">
        </div>
        <div class="card__content">
          <h2 class="artwork__price">$<%= artwork.price %></h2>
          <p class="artwork__description"><%= artwork.description %></p>
          <p class="artwork__description">Artist Name: <%= artwork.artistName %></p>
        </div>
        <div class="card__actions">
          <% if (isAdmin) { %>
          <form action="/delete-artwork" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn" type="submit">Delete</button>
            <input type="hidden" value="<%= artwork._id %>" name="artworkId">
             <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </form>
          <% } else { %>
            <div class="card__actions">
                <a href="/artworks/<%= artwork._id %>" class="btn">Details</a>
                <% if (isAuthenticated && isCustomer) { %>
                    <%- include('../includes/add-to-cart.ejs', {artwork: artwork}) %>
                <% } %>
            </div>
          <% } %>
        </div>
      </article>
      <% } %>
    </div>
    <% } else { %>
    <h1>No Artworks Found!</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
  <script src="/js/admin.js"></script>
</body>
