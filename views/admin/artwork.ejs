             <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/artwork.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (artworks.length > 0) { %>
                    <div class="grid">
                        <% for (let artwork of artworks) { %>
                            <article class="card artwork-item">
                                <header class="card__header">
                                    <h1 class="artwork__title">
                                        <%= artwork.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= artwork.imageUrl %>" alt="<%= artwork.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="artwork__price">$
                                        <%= artwork.price %>
                                    </h2>
                                    <p class="artwork__description">
                                        <%= artwork.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <form action="/admin/delete-artwork" method="POST">
                                        <input type="hidden" value="<%= artwork._id %>" name="artworkId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Artworks Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>